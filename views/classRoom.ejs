<%- include("parts/header") %>
<body>
  <div class="layout-sala">
    <section class="sidebar">
      <div class="mt-3">
        <h2 class="text-center">TÃ³picos</h2>
        <h3 class="text-center fw-bold mt-5"># Materiais</h3>
      </div>

      <div class="d-flex align-items-center flex-column mb-3">
        <img height="70" width="70" src="/assets/image2.png" alt="Foto de perfil">
        <p class="text-center mb-0"><%= tutor.nome %></p>
        <p class="text-center"><%= tutor.profissao %></p>
      </div>
    </section>

    <main class="main-content">
      
      <% tutor.salasCriadas[0].materiais.forEach(element => { %>

        <div class="card mb-3" >
          <div class="row g-0">
            <div class="col-md-4">
              <img src=<%= element[2] %> height="100" class="img-fluid rounded-start" alt="Foto de capa para o material">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= element[0] %></h5>
                <a class="card-text"><%= element[1] %></a>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
          </div>
        </div>
        
      <% }); %>      
    </main>
  </div>
</body>
</html>